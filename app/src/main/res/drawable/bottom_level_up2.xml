<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa de glow externo (más grande, difusa) -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#80FD9EFC" /> <!-- Color neón con opacidad -->
            <corners android:radius="22dp" />
        </shape>
    </item>

    <!-- Capa principal del botón -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#8AF674" />
            <stroke android:width="4dp" android:color="#000000" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>

